---
extends: default  # Base rule set

rules:
  indentation:
    spaces: consistent
    indent-sequences: true
    level: error

  empty-values:
    forbid-in-block-mappings: true
    forbid-in-flow-mappings: true
    forbid-in-block-sequences: true
    level: error

  line-length:
    max: 200
    level: warning

  trailing-spaces:
    level: error

  new-line-at-end-of-file:
    level: error

  truthy:
    level: warning

  document-start:
    level: warning

  key-duplicates:
    level: error

  braces:
    level: warning
